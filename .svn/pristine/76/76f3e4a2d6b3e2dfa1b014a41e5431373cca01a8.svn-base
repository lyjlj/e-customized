/**index.wxss**/
page{
    width: 100%;
    height: 100%;
}
.container1{
    width: 100%;
    height: 100%;
}
.nav {
    /* height: 80rpx; */
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #fff;
    /* font-size: 28px; */
    white-space: nowrap;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
}
.nav-item {
    display: inline-block;
    width: 20%;
    text-align: center;
    font-size: 28rpx;
    line-height: 85rpx;
    height: 85rpx;
}
.itemtext.active{
    line-height: 80rpx;
    /* color: red;
    border-bottom: 2px solid red; */
    height: 80rpx;
    display: inline-block;
}
.active::after{
    display: block;
    border: 6px solid #000;
    width:10rpx;
    margin:auto;
    content: ' ';
}

.tab-box{
    background: #fff;
    padding-top: 85rpx;
    height: 100%;
    box-sizing: border-box;
}
.tab-content{
    overflow-y: scroll;
}
.articleBox{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 50rpx;
  padding: 0 40rpx;
}
.articleItem{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  
}
.articleTitle{
  font-size: 37rpx;
  font-family: "Source Han Sans CN";
  padding-right: 40rpx;
}
.articleImg image{
  width: 200rpx;
  height: 200rpx;
}
.hot{
  font-size: 26rpx;
  color:rgb(168, 165, 165);
}
.hdonglist {
    padding: 32rpx 24rpx;
    line-height: 40rpx;
    font-size: 32rpx;
    position: relative;
    background: #fff;
    margin-top: 24rpx;
    border-bottom: 1rpx solid #e0e0e0;
}

.hdonglist::after,.hdonglist::before {
    border: 6px solid transparent;
    border-left: 6px solid #fff;
    width: 0;
    position: absolute;
    right: 10px;
    height: 0;
    top: 38rpx;
    content: ' ';
}

.hdonglist::before {
    border-left-color: #bbb;
    right: 8px;
}
