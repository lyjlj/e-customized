
.qrcode_btn{
  position: absolute;
  padding: 10rpx;
  border-radius: 10rpx;
  bottom: 20rpx;
  right: 20rpx;
  border: 1rpx solid #999;
  color: #999;
  font-size: 25rpx;
}
.qrcode{
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  top: 0;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.5);
  z-index: 10000;
}
.qrview{
  box-shadow: 0 0 10rpx #ccc;
  border-radius: 10rpx;
  padding: 25rpx;
}
.qrcode view{
  text-align: center;
  color: black;
  font-size: 30rpx;
  font-weight: bolder;
  background: white;
  line-height: 75rpx;
}