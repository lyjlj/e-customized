/* pages/signature/signature.wxss */
page{
  background: #f5f5f5;
}
.canvas {
  width: 360px;
  height: 400px;
  /* border-bottom: 1rpx solid #e2e2e2e2;   */
  position: fixed;
  box-sizing: border-box;
} 
 
.imageCanvas{
  width: 100%;
  height: 300rpx;
}
.buttonBox{
  width: 100%;
  justify-content: center;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  margin-bottom: 20rpx;

}
.sign{
  border-radius: 20rpx;
  height: 800rpx;
  margin: 20rpx;
  padding: 20rpx 0;
  background: #fff;
}
.m{
  font-size: 29rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.page__hd{
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 30rpx;
  margin: 25rpx;
}
