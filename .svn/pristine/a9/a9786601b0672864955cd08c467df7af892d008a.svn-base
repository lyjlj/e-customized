page {
  background: #f3f4f8;
}

.demandDetail {
  margin: 10px;
}

.detail_top {
  width: 650rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  padding: 0 30rpx;
  border-radius: 12rpx;
  font-size: 35rpx;
}

.detail_top text:nth-child(1) {
  font-weight: 900;
}

.detail_top text:nth-child(2) {
  color: #b6b6b6;
}

.detail_centre {
  width: 650rpx;
  height: 250rpx;
  background: #fff;
  margin-top: 20rpx;
  padding: 30rpx 30rpx;
  border-radius: 12rpx;
  font-size: 35rpx;
  display: flex;
  align-items: center;
}

.detail_centre .centre_left{
  width: 200rpx;
  height: 200rpx;
  /* background: #000; */
  border: 2rpx solid #e5e5e5;
  border-radius: 10rpx;
}
.detail_centre .centre_left image{
  width: 100%;
  height: 100%;
}

.detail_centre .centre_right{
  flex: 1;
  height: 200rpx;
  margin-left: 25rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.centre_right .right_title{
  display: flex;
  align-items: center;
}


.right_title text:nth-child(2){
  display: inline-block;
  width: 120rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 25rpx;
  background: #f3f4f8;
  margin-left: 15rpx;
  border-radius: 6rpx;
  color: #b69e3c;
}

.right_count{
  font-size: 26rpx;
  color: #b6b6b6;
}