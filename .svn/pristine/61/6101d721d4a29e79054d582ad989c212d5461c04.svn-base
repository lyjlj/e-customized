page {
    background: #f5f5f5;
}

.page-section {
    background: #f5f5f5;
}

.coupontitle {
    border-bottom: 1rpx solid #dcdcdc;
    line-height: 40rpx;
    display: flex;
    font-size: 32rpx;
    position: fixed;
    top: 0;
    z-index: 99;
}

.coupontitlel {
    width: 250rpx;
    text-align: center;
}

.coupontitlel view {
    border-bottom: 2rpx solid #fff;    
    margin: 0 auto;
    font-size: 32rpx;
    line-height: 40rpx;
    padding: 24rpx;
}

.coupontitlel view.active {
    border-bottom: 4rpx solid #212121;
    font-size: 32rpx;
    line-height: 40rpx;
}

.mt120 {
    margin-top: 120rpx;
    position: relative;
}

.couponlist {
    margin-top: 24rpx;
}

.coupon-info {
    width: 702rpx;
    margin: 0 auto;
    display: block;
    overflow: hidden;
    border-radius: 0 0 8px 8rpx;
    position: relative;
}

.coupon-pic {
    position: relative;
    overflow: hidden;
    color: #fff;
    line-height: 40rpx;
    padding-bottom: 18rpx;
}

.coupon-pic .counpimg {
    height: 86rpx;
    padding-bottom: 0;
    display: flex;
    justify-content: space-between;
}

.coupon-money {
    font-size: 48rpx;
    font-family: SFUIDisplay-Medium;
    font-weight: 700;
    line-height: 64rpx;
    float: left;
}

.coupon-type {
    float: right;
    font-size: 24rpx;
    line-height: 40rpx;
}

.lqicon3 {
    width: 702rpx;
    height: 96rpx;
}

.coupon-des {
    padding: 0 24rpx 16rpx 24rpx;
    overflow: hidden;
    font-size: 24rpx;
}

.coupon-des .coupon-txt {
    font-size: 24rpx;
    line-height: 32rpx;
    color: #424242;
    padding-bottom: 8rpx;
}

.coupon .coupon-txt:before {
    content: "";
    width: 10rpx;
    height: 10rpx;
    background: #ff5252;
    display: inline-block;
    margin-right: 15rpx;
    margin-bottom: 5rpx;
}

.coupon-over .coupon-txt:before {
    content: "";
    width: 10rpx;
    height: 10rpx;
    background: #d4d4d4;
    display: inline-block;
    margin-right: 15rpx;
    margin-bottom: 5rpx;
}

.coupon-use .coupon-txt:before {
    content: "";
    width: 10rpx;
    height: 10rpx;
    background: #ffcdd2;
    display: inline-block;
    margin-right: 15rpx;
    margin-bottom: 5rpx;
}

.kong {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 144rpx 0 285rpx 0;
    min-height: 680rpx;
    overflow: hidden;
    font-size: 28rpx;
    color: #212121;
}

.bg_nullCounp {
    width: 192rpx;
    height: 192rpx;
    padding: 32rpx;
}
.qrcode_btn{
    position: absolute;
    padding: 10rpx;
    border-radius: 10rpx;
    top: 150rpx;
    right: 20rpx;
    border: 1rpx solid #999;
    color: #999;
    font-size: 25rpx;
}
.qrcode_give{
    position: absolute;
    padding: 10rpx;
    border-radius: 10rpx;
    top: 150rpx;
    right: 150rpx;
    color: white;
    font-size: 25rpx;
    background: #ff5252;
    border: 1rpx solid #ff5252;
}
.qrcode{
    position: fixed;
    width: 100%;
    height: 100%;
    display: flex;
    top: 0;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1;
}
.qrview{
    box-shadow: 0 0 10rpx #ccc;
    border-radius: 10rpx;
}
.qrcode view{
    text-align: center;
    color: black;
    font-size: 30rpx;
    font-weight: bolder;
    background: white;
}