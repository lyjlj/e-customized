/* subpages/shareApplet/shareApplet.wxss */
.shareApplet {
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 101;
}

.code_box {
  width: 540rpx;
  height: 800rpx;
  position: fixed;
  top: 70rpx;
  left: 50%;
  margin-left: -270rpx;
  z-index: 9999;
  box-shadow: 0px 3px 16px 0px rgba(184, 184, 184, 0.5200);
}

.code_box image {
  width: 100%;
  height: 100%;
}

.btn_box {
  position: fixed;
  bottom: 30rpx;
  left: 0;
  width: 100%;
  height: 150rpx;
  background-color: #fff;
  padding-top: 32rpx;
  display: flex;
  justify-content: center;
}

.btn_box .btn_save {
  width: 300rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 8rpx;
  color: #fff;
  font-size: 35rpx;
  background: #d7b487;
}

.btn_box .btn_share {
  width: 300rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 8rpx;
  color: #fff;
  font-size: 35rpx;
  background: #762a2a;
}