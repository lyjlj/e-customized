page{
  background: rgb(59,59,59,0.78);
  overflow: hidden;
}
.main{
  overflow: hidden;
}
.nav {
  width: 100%;
  line-height: 100rpx;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 30;
}
.nav-item {
  display: inline-block;
  text-align: center;
  font-size: 31rpx;
  height: 98rpx;
  line-height: 98rpx;
  color:#7D7D7D;
}
.itemtext.active{
  line-height: 85rpx;
  height: 85rpx;
  display: inline-block;
  color:#fff;
}
.itemtext.active::after{
  content:"  "; 
  width:40rpx; 
  height:6rpx; 
  background-color: #fff; 
  margin:0 auto; 
  display:block;
  border-radius: 10rpx;
}
.imageMain{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}
.tab-content{
  width:100%;
  height: 100%;
}
.imageContain {
  margin:auto;
  display: position;
  align-items: center;
}
.imageContain image{
  width:100%;
  height: 100%;
}
.pointitem{
  position: absolute;
  z-index: 20;
  width: 240rpx;
  /* display: flex; */
  align-items: center;
  text-align: center;
}
.pointitem{
  /* 倾斜角度 */
  /* transform: rotate(-45deg);  */
  /* 设置原点 */
  -moz-transform-origin: 0 0;
  -webkit-transform-origin:0 0;
  -o-transform-origin:0 0;
}
.pointitem2{
  position: absolute;
  z-index: 20;
  width: auto;
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
}
.pointitem2 .pointDetail{
  padding-right: 20rpx;
}
.pointitem .pointDetail{
  padding-left: 20rpx;
}

.pointsArea{
  width: 100%;
  height: 100%;
  position: fixed;
  background: none;
  right: 0;
  bottom: 0;
  z-index: 20;
}
.pointDetail{
  color: #fff;
background: rgb(51,51,51,0.5);
line-height: 40rpx;
border-radius: 50rpx;
font-size: 24rpx;
margin-right: 6rpx;
height: 40rpx;
display: flex;
justify-content: between;
}
.pointName{
  overflow:hidden;
text-overflow:ellipsis;
white-space:nowrap;
/* max-width: 100px;
width: 60px; */
width: max-content;
margin: auto;
}
.circle-container{
  width:25px;
  height: 25px;
  display: flex;
  align-items: center;
  margin: 0 auto;

}
.circle{
  width:12rpx;
  height: 12rpx;
  border-radius: 20rpx;
  background: #fff;
  animation: circleAnimate 1s infinite forwards;
  -webkit-animation: circleAnimate 1s infinite forwards;
  margin:auto;
}
@keyframes circleAnimate {
  0% {
    border:1rpx solid rgb(0,0,0,0.5);
  }

  100% {
    border:10rpx solid rgb(0,0,0,0.5);
  }
}
@-webkit-keyframes circleAnimate {
  0% {
    border:1rpx solid rgb(0,0,0,0.5);
  }

  100% {
    border:10rpx solid rgb(0,0,0,0.5);
  }
}
