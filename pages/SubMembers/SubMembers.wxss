page {
    background: #f5f5f5;
}

.yongjingbox {
    background: #ff422c;
    padding: 24rpx 24rpx 32rpx 24rpx;
    overflow: hidden;
}

.leftbox {
    width:300rpx;
    float: left;
    color: #fff;
}

.leftbox .title {
    margin-bottom: 8rpx;
    font-size: 28rpx;
    line-height: 40rpx;
    display: block;
}

.leftbox .money {
    font-size: 56rpx;
    line-height: 72rpx;
    font-weight: bold;
}

.drawalsBox {
    overflow: hidden;
    padding: 24rpx;
    padding-left: 0;
    background: #fff;
}

.drawals {
    width: 50%;
    float: left;
    text-align: center;
}

.drawals .drawals_width {
    font-size: 32rpx;
    font-weight: bold;
    color: #212121;
    display: block;
    line-height: 48rpx;
    text-align: center;
}

.drawals .drawals_width text {
    font-size: 36rpx;
    line-height: 48rpx;
    color: #212121;
    text-align: center;
    display: inline-block;
}

.drawals text {
    font-size: 22rpx;
    line-height: 40rpx;
    font-weight: 500;
    color: #747474;
    text-align: center;
    display: block;
}

.yongjin_list {
    background: #fff;
    overflow: hidden;
    padding: 0;
    padding-left: 24rpx;
    margin-top: 24rpx;
}

.yongjin_list .list_li {
    border-bottom: 1px #f5f5f5 solid;
    padding: 24rpx;
    padding-left: 0;
    overflow: hidden;
}

.list_id {
    float: left;
    width: 302rpx;
}

.list_id .idnum {
    font-size: 28rpx;
    color: #212121;
    line-height: 40rpx;
    display: block;
}

.time {
    color: #bdbdbd;
    font-size: 24rpx;
    line-height: 32rpx;
}

.icon_money {
    font-size: 24rpx;
    margin-right: 8rpx;
}

.count {
    font-size: 30rpx;
}

.width {
    width: 150rpx!important;
    text-align: right;
}
.del{
    width: 100rpx;
    text-align: right;
    height: 100%;
    margin-top: 15rpx;
}