<view class="demandDetail">
  <view class="detail_top">
    <text>定制需求: </text><text>{{detailList.desc}}</text>
  </view>
  <view class="detail_centre">
    <view class="centre_left">
      <image src="{{detailList.attachment}}" mode="aspectFill"></image>
    </view>
    <view class="centre_right">
      <view class="right_title">
        <text>{{detailList.needStr}}</text>
        <text>{{detailList.type}}</text>
      </view>
      <view class="right_count">
        数量 : ×{{detailList.quantity}}
      </view>
    </view>

    <view class="countdown">
      <view class="">倒计时</view>
    </view>

    
