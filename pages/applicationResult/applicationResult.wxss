.shopcart-no {
    width: 100%;
    display: flex;
    background: #fff;
    text-align: center;
    border-top: 1rpx solid #e0e0e0;
}

.shopcart-no image {
    width: 200rpx;
    height: 200rpx;
    margin: 0 auto;
}

.shopcart-no .shopcart-no-item {
    margin: 100rpx auto 0 auto;
}

.pic image {
    margin: 0 auto;
}

.shopcart-no-item .btn_go {
    background: linear-gradient(left,#ff5722,#FF1919);
    color: #fff;
    border-radius: 4px;
    width: 144rpx;
    height: 65rpx;
    font-size: 28rpx;
    margin: auto;
    line-height: 65rpx;
}

.result {
    color: #888888;
    line-height: 40rpx;
    font-size: 28rpx;
    text-align: center;
    margin-bottom: 56rpx;
}

.result button,.result button::after {
    border: none;
}

.result .button {
    width: 100%;
    line-height: 48rpx;
    font-size: 36rpx;
    padding: 20rpx 0;
    border-radius: 8rpx;
}

.result .btnsure {
    background: linear-gradient(to right,#fe5722 0%,#ff191b 100%);
    color: #fff;
}

.result .btncancel {
    border: 1rpx solid #d6d5d6;
    background: #fbfafc;
}

.title {
    font-size: 40rpx;
    line-height: 64rpx;
    color: #000;
    margin-top: 48rpx;
    margin-bottom: 24rpx;
}