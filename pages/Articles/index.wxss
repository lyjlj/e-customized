/**index.wxss**/
page{
    width: 100%;
    height: 100%;
}
.container1{
    width: 100%;
    height: 100%;
}
.nav {
    /* height: 80rpx; */
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #fff;
    /* font-size: 28px; */
    white-space: nowrap;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
}
.nav-item {
    display: inline-block;
    width: 20%;
    text-align: center;
    font-size: 28rpx;
    line-height: 80rpx;
    height: 80rpx;
}
.itemtext.active{
    line-height: 80rpx;
    color: red;
    border-bottom: 2px solid red;
    height: 80rpx;
    display: inline-block;
}
.tab-box{
    background: #fff;
    padding-top: 85rpx;
    height: 100%;
    box-sizing: border-box;
}
.tab-content{
    overflow-y: scroll;
}
.articleBox{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 50rpx;
  padding: 0 40rpx;
}
.articleItem{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  
}
.articleTitle{
  font-size: 37rpx;
  font-family: "Source Han Sans CN";
  padding-right: 40rpx;
  margin-left: 15rpx;
}
.articleTitle::before{
  content: ' ';
  width: 6rpx;
  height:35rpx;
  border-radius: 10rpx;
  float:left;
  margin-top:10rpx;
  margin-right: 20rpx;
  background-image: linear-gradient(90deg, red 0px, red 5px, transparent 5px);
}
.articleImg image{
  width: 200rpx;
  height: 200rpx;
}
.hot{
  font-size: 26rpx;
  color:rgb(168, 165, 165);
}