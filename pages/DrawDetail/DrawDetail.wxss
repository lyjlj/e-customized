page {
    background: #f5f5f5;
}

.form-group {
    padding: 24rpx;
    font-size: 30rpx;
    line-height: 48rpx;
    overflow: hidden;
    display: flex;
    position: relative;
    color: #212121;
}

.form-group:not(:last-child):after {
    content: '';
    position: absolute;
    bottom: 0;
    right: 0;
    width: 750rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.form-group-name {
    margin-right: 16rpx;
    width: 160rpx;
    overflow: hidden;
}

.form-group-input input {
    width: 510rpx;
}

.deposit {
    text-align: right;
    width: 490rpx;
}

.btn {
    width: 702rpx;
    margin: 0 auto;
    overflow: hidden;
    text-align: center;
    color: #ff5722;
    border-radius: 8rpx;
    margin-top: 48rpx;
    font-size: 32rpx;
    line-height: 48rpx;
    padding: 24rpx 0;
    background: #fff;
    border: none;
    font-weight: bold;
}

.coupontitle {
    line-height: 48rpx;
    display: flex;
    font-size: 32rpx;
    position: fixed;
    top: 0;
    z-index: 99;
    width: 702rpx;
    padding: 24rpx;
    padding-bottom: 0;
}

.coupontitlel {
    width: 50%;
    text-align: center;
}

.coupontitlel view {
    border-bottom: 4rpx solid #fff;
    width: 160rpx;
    margin: 0 auto;
    font-size: 32rpx;
    color: #212121;
    font-weight: 500;
    padding-bottom: 24rpx;
}

.coupontitlel view.active {
    border-bottom: 4rpx solid #212121;
    font-weight: bold;
    font-size: 32rpx;
}

.mt120 {
    margin-top: 100rpx;
    position: relative;
}

.couponlist {
    margin-top: 24rpx;
}

.coupon-info {
    width: 702rpx;
    margin: 0 auto;
    display: block;
    overflow: hidden;
    border-radius: 0 0 8px 8rpx;
}

.coupon-pic {
    position: relative;
    overflow: hidden;
    color: #fff;
    line-height: 40rpx;
    padding-bottom: 18rpx;
}

.coupon-pic .counpimg {
    height: 86rpx;
    padding-bottom: 0;
}

.coupon-money {
    font-size: 48rpx;
    font-family: SFUIDisplay-Medium;
    font-weight: 700;
    line-height: 64rpx;
    float: left;
}

.coupon-type {
    float: right;
    font-size: 24rpx;
    line-height: 40rpx;
}

.lqicon3 {
    width: 702rpx;
    height: 96rpx;
}

.coupon-des {
    padding: 0 24rpx 16rpx 24rpx;
    overflow: hidden;
    font-size: 24rpx;
}

.coupon-des .coupon-txt {
    font-size: 24rpx;
    line-height: 32rpx;
    color: #424242;
    padding-bottom: 8rpx;
}

.coupon .coupon-txt:before {
    content: "";
    width: 10rpx;
    height: 10rpx;
    background: #ff5252;
    display: inline-block;
    margin-right: 15rpx;
    margin-bottom: 5rpx;
}

.coupon-over .coupon-txt:before {
    content: "";
    width: 10rpx;
    height: 10rpx;
    background: #d4d4d4;
    display: inline-block;
    margin-right: 15rpx;
    margin-bottom: 5rpx;
}

.coupon-use .coupon-txt:before {
    content: "";
    width: 10rpx;
    height: 10rpx;
    background: #ffcdd2;
    display: inline-block;
    margin-right: 15rpx;
    margin-bottom: 5rpx;
}