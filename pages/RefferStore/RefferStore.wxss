page {
    height: 100%;
}

.btn {
    position: fixed;
    bottom: 24rpx;
    width: 702rpx;
    left: 24rpx;
}

.btn button {
    margin-top: 48rpx;
    font-size: 36rpx;
    height: 88rpx;
}

.btn button::after {
    border: none;
}

button[type="share"] {
    color: #fff;
    background: linear-gradient(to right,#fe5722 0%,#ff191b 100%);
    border: 1rpx #fe5722 solid;
}

button.other-button-hover {
    color: #fff;
    margin-top: 16rpx;
    background: linear-gradient(to right,#fe5722 0%,#ff191b 100%);
}