/**index.wxss**/
page{
    width: 100%;
    height: 100%;
}
.container1{
    width: 100%;
    height: 100%;
}
.nav {
    /* height: 80rpx; */
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #fff;
    /* font-size: 28px; */
    white-space: nowrap;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
}
.nav-item {
    display: inline-block;
    text-align: center;
    font-size: 28rpx;
    line-height: 80rpx;
    height: 80rpx;
    margin: 0 20rpx;
}
.itemtext.active{
    line-height: 80rpx;
    color: red;
    border-bottom: 2px solid red;
    height: 80rpx;
    display: inline-block;
}
.tab-box{
    background: #fff;
    padding-top: 180rpx;
    height: 100%;
    box-sizing: border-box;
}
.tab-content{
    overflow-y: scroll;
}