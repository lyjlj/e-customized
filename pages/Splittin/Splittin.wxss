page {
    background: #f5f5f5;
}

.yongjingbox {
    background: #ff422c;
    padding: 24rpx 24rpx 32rpx 24rpx;
    overflow: hidden;
}

.leftbox {
    width: 400rpx;
    float: left;
    color: #fff;
}

.leftbox .title {
    margin-bottom: 8rpx;
    font-size: 28rpx;
    line-height: 40rpx;
    display: block;
}

.leftbox .money {
    font-size: 56rpx;
    line-height: 72rpx;
    font-weight: bold;
}

.rightbox {
    float: right;
    width: 104rpx;
    height: 64rpx;
    text-align: center;
    line-height: 64rpx;
    color: #ff5722;
    background: #fbe9e7;
    margin-top: 32rpx;
    border: 1px #ff5722 solid;
    border-radius: 32rpx;
    font-size: 28rpx;
}

.drawalsBox {
    overflow: hidden;
    padding: 24rpx;
    padding-left: 0;
    background: #fff;
}

.drawals {
    width: 33.3%;
    float: left;
}

.drawals .drawals_width {
    font-size: 32rpx;
    font-weight: bold;
    color: #212121;
    display: block;
    line-height: 48rpx;
    text-align: center;
}

.drawals .drawals_width .yuan {
    font-size: 30rpx;
    margin-right: 8rpx;
    display: inline-block;
}

.drawals .drawals_width text {
    font-size: 36rpx;
    line-height: 48rpx;
    color: #212121;
    text-align: center;
    display: inline-block;
}

.drawals text {
    font-size: 22rpx;
    line-height: 40rpx;
    font-weight: 500;
    color: #747474;
    text-align: center;
    display: block;
}

.yongjin_list {
    background: #fff;
    overflow: hidden;
    padding: 0;
    padding-left: 24rpx;
    margin-top: 24rpx;
}

.yongjin_list .list_li {
    border-bottom: 1px #f5f5f5 solid;
    padding: 24rpx;
    padding-left: 0;
    overflow: hidden;
}

.list_id {
    float: left;
    width: 280rpx;
    margin-right: 24rpx;
}

.list_id .idnum {
    font-size: 28rpx;
    color: #212121;
    line-height: 40rpx;
    display: block;
    height: 40rpx;
}

.time {
    color: #bdbdbd;
    font-size: 24rpx;
    line-height: 32rpx;
}

.list_money {
    float: right;
    color: #212121;
    font-size: 30rpx;
    margin-top: 32rpx;
}

.list_money .icon_money {
    font-size: 24rpx;
    margin-right: 8rpx;
}

.width {
    width: 200rpx!important;
}