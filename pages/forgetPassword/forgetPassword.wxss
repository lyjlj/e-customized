page {
    background: #f5f5f5;
}

.page-section {
    margin-top: 24rpx;
    overflow: hidden;
    position: relative;
}

.form-group {
    padding: 24rpx;
    font-size: 30rpx;
    line-height: 48rpx;
    overflow: hidden;
    display: flex;
    position: relative;
    color: #212121;
}

.form-group:not(:last-child):after {
    content: '';
    position: absolute;
    bottom: 0;
    right: 0;
    width: 726rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.form-group-name {
    margin-right: 16rpx;
    width: 160rpx;
    overflow: hidden;
}

.form-group-input input {
    width: 510rpx;
}

.deposit {
    text-align: right;
    width: 490rpx;
}

.come-icon {
    font-size: 13px;
    right: 24rpx;
    position: absolute;
    color: #9e9e9e;
    bottom: 20rpx;
}

.form-group .selecttxt {
    color: #bdbdbd;
    text-align: right;
    width: 490rpx;
}

.btn {
    width: 702rpx;
    margin: 0 auto;
    overflow: hidden;
    text-align: center;
    border-radius: 8rpx;
    margin-top: 48rpx;
    font-size: 32rpx;
    line-height: 48rpx;
    padding: 24rpx 0;
    background: linear-gradient(to right,#ff5622 0%,#ff1a1a 100%);
    border: none;
    font-weight: bold;
    color: #fff;
}

.page2 {
    background: #fff;
}

.loginpassword {
    display: flex;
    width: 100%;
    height: 98rpx;
    line-height: 98rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.loginpassword input {
    height: 98rpx;
    line-height: 98rpx;
    color: #212121;
    font-size: 30rpx;
    width: 478rpx;
}

.loginpassword input.codeinput {
    width: 338rpx!important;
}

.loginpassword text {
    width: 210rpx;
    font-size: 30rpx;
    float: left;
}

.loginpassword text.change {
    width: 100rpx;
    float: right;
}

.imgCodeSrc {
    margin-left: 8rpx;
    float: right;
}

.loginpassword text#phoneImgCode {
    width: 300rpx;
}

.loginpassword text.phone {
    width: 276rpx;
}

.loginpassword text.btncode {
    width: 240rpx!important;
    border: 1px #ff5722 solid;
    color: #ff5722;
    border-radius: 24rpx;
    height: 48rpx;
    line-height: 48rpx;
    display: inline-block;
    margin-top: 8rpx;
    margin-right: 16rpx;
    text-align: center;
    padding: 12rpx;
}

.codeimg {
    width: 150rpx;
    height: 65rpx;
    line-height: 65rpx;
    overflow: hidden;
    margin-top: 20rpx;
    display: inline-block;
    margin-right: 16rpx;
}

.loginpassword input.phone_input {
    width: 370rpx;
}