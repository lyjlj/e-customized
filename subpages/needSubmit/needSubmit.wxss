}
.item_value input{
  height: 100rpx;
}
.select_item view{
  flex: 1;
  border: 1px solid;
    text-align: center;
    height: 60rpx;
    line-height: 60rpx;
    margin: 0 5px;
    border-radius: 5px;
}
.logoimg {
  margin-bottom: 25rpx;
  position: relative;
  padding: 10rpx;
  }
  
  .logoimg image {
    border: 1rpx solid #ddd;
    width:200rpx;
    height: 200rpx;
    border-radius: 10rpx;
  }
  .logoimg .delete {
    position: absolute;
  bottom: 5%;
  right: 5%;
  z-index: 5;
  text-align: center;
  }
  .deleteq{
    position: absolute;
    right: 0;
    bottom: 0;
    z-index: 9;
  }
  .selected{
    border: 1px solid #C9A015;
    color:#C9A015
  }
  .morebutton{
    width: 150px;
    background-color: #F3F4F8;
    color: #ABABAB;
    border-radius: 25px;
    margin: 20px auto;
    text-align: center;
    height: 30px;
    line-height: 30px;
  }
